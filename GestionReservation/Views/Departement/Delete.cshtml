@model GestionReservation.Models.Departement  
@{
    ViewData["Title"] = "Supprimer un Département";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<h3>Voulez-vous vraiment supprimer ce département?</h3>

<div>
    <h4>Département</h4>
    <div>
        <dl class="dl-horizontal">
            <dt>Nom du Département</dt>
            <dd>@Model.NomDept</dd>
            <dt>Nom de la Salle</dt>
            <dd>@Model.NomSalle</dd>
            <dt>Type de Département</dt>
            <dd>@Model.TypeDept</dd>
            <dt>Budget</dt>
            <dd>@Model.Budget</dd>
            <dt>Administrateur</dt>
            <dd>@Model.Admin.Nom</dd>
        </dl>
    </div>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Supprimer</button>
        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
    </form>
</div>