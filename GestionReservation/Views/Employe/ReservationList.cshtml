@model IEnumerable<ReservationViewModel>

@{
    ViewData["Title"] = "List of Rooms for Reservation";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Room Name</th>
                <th>Capacity</th>
                <th>Location</th>
                <th>Available</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model)
            {
                <tr>
                    <td>@room.RoomName</td>
                    <td>@room.Capacity</td>
                    <td>@room.Location</td>
                    <td>
                        @if (room.IsAvailable)
                        {
                            <span class="badge bg-success">Available</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Not Available</span>
                        }
                    </td>
                    <td>
                        @if (room.IsAvailable)
                        {
                            <form asp-action="MakeReservation" method="post" class="d-inline">
                                <input type="hidden" name="roomId" value="@room.RoomId" />
                                <input type="date" name="reservationDate" class="form-control mb-2" required />
                                <button type="submit" class="btn btn-primary">Reserve</button>
                            </form>
                        }
                        else
                        {
                            <button class="btn btn-secondary" disabled>Not Available</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
