@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Admin Dashboard</title> <!-- Use dynamic title -->
    <link rel="shortcut icon" type="image/png" href="~/Template/images/logos/chu.png" />
    <link rel="stylesheet" href="~/Template/css/styles.min.css" />
</head>

<body>
    <!-- Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <!-- Sidebar Start -->
        <aside class="left-sidebar">
            <!-- Sidebar scroll-->
            <div>
                <div class="brand-logo d-flex align-items-center justify-content-between">
                    <a asp-controller="Home" asp-action="Index" class="text-nowrap logo-img">
                        <img src="~/Template/images/logos/chu.png" width="100" alt="Logo" />
                    </a>
                    <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
                        <i class="ti ti-x fs-8"></i>
                    </div>
                </div>

                <div class="user-greeting">
                    @if (HttpContextAccessor.HttpContext.Session.GetString("Nom") != null)
                    {
                        <p>Bonjour, @HttpContextAccessor.HttpContext.Session.GetString("Nom")!</p>
                    }
                </div>
                <!-- Sidebar navigation-->
                <nav class="sidebar-nav scroll-sidebar" data-simplebar="">
                    <ul id="sidebarnav">
                        <li class="nav-small-cap">
                            <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                            <span class="hide-menu">Home</span>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Admin" asp-action="Index">
                                <span>
                                    <i class="ti ti-layout-dashboard"></i>
                                </span>
                                <span class="hide-menu">Dashboard</span>
                            </a>
                        </li>

                        <!-- Admin Gestion des Utilisateurs -->
                       
                            <li class="nav-small-cap">
                                <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                                <span class="hide-menu">USER MANAGEMENT</span>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-controller="Admin" asp-action="UserList">
                                    <span>
                                        <i class="ti ti-users"></i>
                                    </span>
                                    <span class="hide-menu">Listes des utilisateurs</span>
                                </a>
                            </li>
                            <!-- Add Create User Button -->
                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-controller="Admin" asp-action="CreateUser">
                                    <span>
                                        <i class="ti ti-user-plus"></i>
                                    </span>
                                    <span class="hide-menu">Ajouter Utilisateur</span>
                                </a>
                            </li>
                       
                        <li class="nav-small-cap">
                            <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                            <span class="hide-menu">AUTH</span>
                        </li>
                       
                            <li class="sidebar-item">
                                <form asp-controller="Admin" asp-action="Logout" method="post" class="d-inline">
                                    <button class="sidebar-link btn btn-link" type="submit">
                                        <span>
                                            <i class="ti ti-logout"></i>
                                        </span>
                                        <span class="hide-menu">Logout</span>
                                    </button>
                                </form>
                            </li>
                      
                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-controller="Account" asp-action="Login">
                                    <span>
                                        <i class="ti ti-login"></i>
                                    </span>
                                    <span class="hide-menu">Login</span>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-controller="Account" asp-action="Register">
                                    <span>
                                        <i class="ti ti-user-plus"></i>
                                    </span>
                                    <span class="hide-menu">Register</span>
                                </a>
                            </li>
                        
                    </ul>
                </nav>     
            </div>
        </aside>
        <div class="body-wrapper">
            @RenderBody() 
        </div>
    </div>
    <script src="~/Template/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/Template/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Template/js/sidebarmenu.js"></script>
    <script src="~/Template/js/app.min.js"></script>
    <script src="~/Template/libs/simplebar/dist/simplebar.js"></script>
    <script src="~/Template/libs/jquery/dist/jquery.min.js"></script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>
