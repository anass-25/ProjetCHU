@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Secrétaire Dashboard</title>
    <link rel="shortcut icon" type="image/png" href="~/Template/images/logos/chu.png" />
    <link rel="stylesheet" href="~/Template/css/styles.min.css" />
</head>

<body>
    <!-- Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <!-- Sidebar Start -->
        <aside class="left-sidebar">
            <!-- Sidebar scroll-->
            <div>
                <div class="brand-logo d-flex align-items-center justify-content-center">
                    <a asp-controller="Home" asp-action="Index" class="text-nowrap logo-img">
                        <img src="~/Template/images/logos/chu.png" width="100" alt="Logo" class="mx-auto d-block" />
                    </a>
                </div>

                <!-- User Greeting -->
                <div class="user-greeting text-center mt-3">
                    @if (HttpContextAccessor.HttpContext.Session.GetString("Nom") != null)
                    {
                        <p>Bonjour, @HttpContextAccessor.HttpContext.Session.GetString("Nom")!</p>
                    }
                </div>

                <!-- Sidebar navigation-->
                <nav class="sidebar-nav scroll-sidebar" data-simplebar="">
                    <ul id="sidebarnav">
                        <li class="nav-small-cap">
                            <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                            <span class="hide-menu">Accueil</span>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Secretaire" asp-action="Index">
                                <span>
                                    <i class="ti ti-layout-dashboard"></i>
                                </span>
                                <span class="hide-menu">Dashboard</span>
                            </a>
                        </li>

                        <!-- Gestion des Réservations -->
                        <li class="nav-small-cap">
                            <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                            <span class="hide-menu">Gestion des Réservations</span>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Secretaire" asp-action="ReservationList">
                                <span>
                                    <i class="ti ti-calendar"></i>
                                </span>
                                <span class="hide-menu">Liste des Réservations</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Secretaire" asp-action="CreateReservation">
                                <span>
                                    <i class="ti ti-plus"></i>
                                </span>
                                <span class="hide-menu">Ajouter Réservation</span>
                            </a>
                        </li>

                        <!-- Notifications -->
                        <li class="nav-small-cap">
                            <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                            <span class="hide-menu">Notifications</span>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Secretaire" asp-action="Notifications">
                                <span>
                                    <i class="ti ti-bell"></i>
                                </span>
                                <span class="hide-menu">Voir Notifications</span>
                            </a>
                        </li>

                        <!-- Authentication Links -->
                        <li class="nav-small-cap">
                            <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                            <span class="hide-menu">AUTHENTIFICATION</span>
                        </li>
                        <li class="sidebar-item">
                            <form asp-controller="SecretaireAccount" asp-action="Logout" method="post" class="d-inline">
                                <button class="sidebar-link btn btn-link" type="submit">
                                    <span>
                                        <i class="ti ti-logout"></i>
                                    </span>
                                    <span class="hide-menu">Déconnexion</span>
                                </button>
                            </form>
                        </li>
                    </ul>
                </nav>
                <!-- End Sidebar navigation -->
            </div>
            <!-- End Sidebar scroll-->
        </aside>
        <!-- Sidebar End -->
        <!-- Main Content Wrapper -->
        <div class="body-wrapper">
            @RenderBody()
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/Template/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/Template/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Template/js/sidebarmenu.js"></script>
    <script src="~/Template/js/app.min.js"></script>
    <script src="~/Template/libs/simplebar/dist/simplebar.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
