@model GestionReservation.ViewModals.UserCreateViewModel

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <form asp-action="EditUser" method="post">
        <div class="form-group">
            <label asp-for="UserName" class="control-label"></label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Prenom" class="control-label"></label>
            <input asp-for="Prenom" class="form-control" />
            <span asp-validation-for="Prenom" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" type="email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="CIN" class="control-label"></label>
            <input asp-for="CIN" class="form-control" />
            <span asp-validation-for="CIN" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="DN">Date de Naissance:</label>
            <input asp-for="DN" type="date" class="form-control" />
            <span asp-validation-for="DN" class="text-danger"></span>
        </div>

        <!-- Role Selection -->
        <div class="form-group mt-3">
            <label asp-for="Role" class="control-label"></label>
            <select asp-for="Role" class="form-control" id="roleSelect">
                <option value="Employe">Employe</option>
                <option value="Secretaire">Secretaire</option>
                <option value="Admin">Admin</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <!-- Role-Specific Fields -->
        <div id="employeFields" class="role-specific-fields" style="display: none;">
            <div class="form-group mt-3">
                <label asp-for="TypePost">Type de Poste:</label>
                <input asp-for="TypePost" class="form-control" />
                <span asp-validation-for="TypePost" class="text-danger"></span>
            </div>
        </div>

        <div id="secretaireFields" class="role-specific-fields" style="display: none;">
            <div class="form-group mt-3">
                <label asp-for="NumeroBureau">Numéro de Bureau:</label>
                <input asp-for="NumeroBureau" class="form-control" />
                <span asp-validation-for="NumeroBureau" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="NumeroFixe">Numéro Fixe:</label>
                <input asp-for="NumeroFixe" class="form-control" />
                <span asp-validation-for="NumeroFixe" class="text-danger"></span>
            </div>
        </div>

        <div id="adminFields" class="role-specific-fields" style="display: none;">
            <div class="form-group mt-3">
                <label asp-for="DateCreation">Date de Création:</label>
                <input asp-for="DateCreation" class="form-control" />
                <span asp-validation-for="DateCreation" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group mt-4 text-center">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="UserList" asp-controller="Admin" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const roleSelect = document.getElementById("roleSelect");
            const employeFields = document.getElementById("employeFields");
            const secretaireFields = document.getElementById("secretaireFields");
            const adminFields = document.getElementById("adminFields");

            function showFieldsBasedOnRole() {
                const selectedRole = roleSelect.value;
                employeFields.style.display = selectedRole === "Employe" ? "block" : "none";
                secretaireFields.style.display = selectedRole === "Secretaire" ? "block" : "none";
                adminFields.style.display = selectedRole === "Admin" ? "block" : "none";
            }

            // Initialize fields on page load
            showFieldsBasedOnRole();

            // Add event listener to role select dropdown
            roleSelect.addEventListener("change", showFieldsBasedOnRole);
        });
    </script>
}

